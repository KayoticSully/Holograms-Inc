<div class="row-fluid">
	<legend> <%= @product.name %> </legend>
</div>
<div class="row-fluid">
	<%#Display product image%>
	<div class="span4">
		<%= image_tag("/assets/#{@product.image}", :class => "product_image") %>
	</div>
	
	<div class="span8 well">
		<%#Show the product details%>
		<div class="row-fluid">
		<%= @product.description %>
		</div>
		<div class="row-fluid">
			<div class="span8">
					<b>Price:</b>
					<%= number_with_precision(@product.price, :precision => 2) %>
					</br>
					  <b>Weight:</b>
					  <%= @product.weight %> oz
  					</br>
					<b>Height:</b>
					<%= @product.height %> in
  					</br>
					<b>Length:</b>
					<%= @product.length %> in
  					</br>
					<b>Width:</b>
					<%= @product.width %> in
			</div>
			<div class="span4">
				<% if (@product.stock) %>
					<b>Currently in stock</b>
				<%else%>
					<b>Currently out of stock</b>
				<%end%>
				<%= link_to "Add to Cart", "/orders/add/#{@product.id}", :class => "btn btn-warning" %>
			</div>
		</div>
	</div>
</div>