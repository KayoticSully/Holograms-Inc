<div class="row-fluid">
	<legend> <%= @product.name %> </legend>
</div>
<div class="row-fluid">
	<%#Display product image%>
	<div class="span4">
		<%= image_tag @product.image.url(:large), :class => "product_image" %>
	</div>
	
	<div class="span8 well">
		<%#Show the product details%>
		<div class="row-fluid">
		<%= @product.description %>
		</div>
		<div class="row-fluid">
			<div class="span8">
					<b>Price: </b>
					<%= "$"<<number_with_precision(@product.price, :precision => 2) %>
					</br>
					<% if @product.sale_price %>
						<b>Sale price: $</b>
						<%= "$"<<number_with_precision(@product.sale_price, :precision => 2) %>
						</br>
						<b>You save
						<%= @product.sale_markdown %>%!
						</br>
						</b>
					<% end %>
					  <b>Weight:</b>
					  <%= @product.weight %> oz
  					</br>
					<b>Height:</b>
					<%= @product.height %> in
  					</br>
					<b>Length:</b>
					<%= @product.length %> in
  					</br>
					<b>Width:</b>
					<%= @product.width %> in
			</div>
			<div class="span4">
				<%if (!@current_user || @current_user.user_type.purchase) %>
					<% if (@product.stock>0) %>
						<%= link_to "Add to Cart", "/orders/add/#{@product.id}", :class => "btn btn-warning" %>
					<% else %>
						<button type="button" class="btn btn-small btn-inverse disabled" disabled="disabled">Out of stock</button>
					<% end %>
				<% else %>
					<button type="button" class="btn btn-small btn-inverse disabled" disabled="disabled">Purchase not permitted.</button>
				<% end %>
				
			</div>
		</div>
	</div>
</div>