<p id="notice"><%= notice %></p>
<div class="row-fluid">
	<div class="page-header">
		<h4> <%= @product.name %> </h4>
	</div>
</div>
<div class="row-fluid">
	<div class="span4">
		<%= image_tag("/assets/#{@product.image}") %>
	</div>
	
	<div class="span8 well">
		<div class="row-fluid">
		<%= @product.description %>
		</div>
		<div class="row-fluid">
			<div class="span8">
				<p>
					<b>Price:</b>
					<%= @product.price %>
				</p>

			</div>
			<div class="span4">
				<%= link_to "Add to Cart", "/orders/add/#{@product.id}", :class => "btn btn-warning" %>
			</div>
		</div>
	</div>
</div>







<p>
  <b><%= if (@product.stock) then "In stock" else "Out of stock" end %></b>
</p>

<p>
  <b>Weight:</b>
  <%= @product.weight %>
</p>

<p>
  <b>Height:</b>
  <%= @product.height %>
</p>

<p>
  <b>Length:</b>
  <%= @product.length %>
</p>

<p>
  <b>Width:</b>
  <%= @product.width %>
</p>

<p>
  <b>Keywords</b>
  <%= @product.keywords %>
</p>

<%= debug @product %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<br>