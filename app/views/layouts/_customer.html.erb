<!DOCTYPE html>
<html>
<head>
  <title>ProjectCourse</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
  <style type="text/css">
    @media(min-width:978px){
	body {
	  padding-top: 60px;
	  padding-bottom: 40px;
	}
    }
  </style>
  <noscript>
    <style>
      #everything_else {
	margin-left: 90px;
	visibility: visible;
      }
    </style>
  </noscript>
</head>
<body>

<%#Opening divs for navbar%>
<div id="wrap">
	<div id="main">
		<%= render :partial => "/layouts/customer_navbar" %>
		<div class="container-fluid">
		  <div class="row-fluid">
		    <div class="span2 visible-phone">
			<ul class="nav navbar-inverse nav-list well">
				<li class="nav-heaver"><h5>Categories</h5></li>
				<li class="divider"></li>
				<% @keywords.each do |keyword| %>
						<li class>
							<%= link_to keyword.name.capitalize, keyword %>
						</li>
				<% end %>
			</ul>
		    </div>
		  </div>
		  <div class="row-fluid">
			  <div id="category_bar"  data-spy="affix" class="span2 hidden-phone">
			      <ul class="nav navbar-inverse nav-list well">
				      <li class="nav-heaver"><h5>Categories</h5></li>
				      <li class="divider"></li>
				      <% @keywords.each do |keyword| %>
						      <li class>
							      <%= link_to keyword.name.capitalize, keyword %>
						      </li>
				      <% end %>
			      </ul>
			  </div>
			  <div id="everything_else" class="span9 offset2">
			    
				  <% flash.each do |name, msg| %>
					  <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert alert-info" %>
				  <% end %>
				  
				  <%= yield %>
				  
			  </div>
		  </div>
		</div>
	</div>
</div>
				
<div id="footer">
	<a href="/about">About Us</a> |
	<%= link_to "Help and FAQ", help_items_path %> |
	<a href="mailto:help@hologramsinc.com">Contact Us</a>

</div>

</body>
</html>
