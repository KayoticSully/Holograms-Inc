<!DOCTYPE html>
<html>
<head>
  <title>ProjectCourse</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.email_address %>.
    <%= link_to "Log out", log_out_path %>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>
</div>

<div class="container">
	<div class="row">
		<div id="category_bar" class="span3">
			<img src="/assets/HoloIncTrans.png" alt="Holograms Inc Logo"/>
			<div class="well sidebar-nav">
				<ul class="nav nav-list">
					<li class="nav-heaver">Browse By Category</li>
					<% #may want to check if there are any, not sure what happens on empty list %>
					<% @keywords.each do |keyword| %>
							<li class>
								<a href="#">
									<%= keyword.name %>
								</a>
							</li>
					<% end %>
				</ul>
			</div>

		<div>
	</div>
</div>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
