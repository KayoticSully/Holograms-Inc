<!DOCTYPE html>
<html>
<head>
  <title>ProjectCourse</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
  <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
 </style>
 
</head>
<body>
<div id="wrap">
	<div id="main">
		<%# Using inverse navbar for employee access to make UI distinct %>
		<div id="user_nav" class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container-fluid">
					<ul class="nav" role="navigation">
					
						<%# link to employee. This link is currently broken, need to add a route or remove it%>
						<a class="brand" href="/employee">	Employee Access </a>
						
						<% if current_user %>
								<%#Stuff for Inventory Management goes here%>
								<%if current_user.user_type.products %>
									<li>
										<%= link_to "Manage Products", products_path %>
									</li>
									<%# COMMENTING OUT DROPDOWN
									<li class="dropdown">
										<!--This makes the label for the dropdown -->
										<a id="inventory_dropdown" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
											Inventory
											<b class="caret"></b>
										</a>
										<!--Here goes the list that drops down-->
										<ul class="dropdown-menu" role="menu" aria-labeledby="inventory_dropdown">
											<li>
												<a tabindex="-1" href="#">TODO</a>
											</li>
										</ul>
									</li>
									%>
								<%end%>
								
								<%#Keyword Management%>
								<%if current_user.user_type.keywords_edit%>
									<li>
										<%=link_to "Manage Keywords", keywords_path %>
									</li>
								<%end%>
								
								<%#Sales Management%>
								<%if current_user.user_type.sales_edit %>
									<li>
										<%=link_to "Manage Sales", sales_path %>
									</li>
								<%end%>
								
								<%#FAQ and Help management%>
								<%if current_user.user_type.help_edit %>
									<li>
										<%= link_to "Manage FAQ", help_items_path %>
									</li>
								<%end%>
						<%end%>	
					</ul>
					
					
					<%# These items will be on the right side of the nav bar %>
					<ul class="nav pull-right">
						
						
						<% if current_user %>
							<li> <%= link_to "Welcome, " << current_user.first_name << " " <<current_user.last_name << "!", edit_user_path(current_user) %> </li>
							<li> <%= link_to "Log out", log_out_path %> </li>
						<% end %>
						
					</ul>
				</div>
			</div>
		</div>

		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert alert-info" %>
		<% end %>

		<%= yield %>

	</div>
</div>



<div id="footer">
	<a href="/about">About Us</a> |
	<%= link_to "Help and FAQ", help_items_path %> |
	<a href="mailto:help@hologramsinc.com">Contact Us</a>
</div>

<!--Enable dropdowns for employee UI-->
<script type="text/javascript">
$('.dropdown-toggle').dropdown()
</script>


</body>
</html>
