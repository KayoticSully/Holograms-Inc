<h1>Help and FAQs</h1>

<%# Creating the table for FAQ %>
<table class="table table-striped">
  <%# First line to define colomns %>
  <tr>
    <th>Question</th>
    <th>Answer</th>
  </tr>
  <%# Make a row for each entry in the FAQ %>
<% @help_items.each do |help_item| %>
  <tr>
    <td><%= help_item.title %></td>
    <td><%= help_item.text %></td>
  </tr>
<% end %>
</table>

<%#only do this is the user is signed in%>
<%if @current_user%>
	<%# if the user is allowed to edit the help files, thenlet them see this link.%>
	<%= if @current_user.user_type.help_edit then link_to 'New FAQ (employees only)', new_help_item_path  end %>
<%end%>

<a class="btn" href="mailto:help@hologramsinc.com">E-mail us!</a>
