<h1>Listing help_items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @help_items.each do |help_item| %>
  <tr>
    <td><%= help_item.title %></td>
    <td><%= help_item.text %></td>
    <td><%= link_to 'Show', help_item %></td>
    <td><%= link_to 'Edit', edit_help_item_path(help_item) %></td>
    <td><%= link_to 'Destroy', help_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

