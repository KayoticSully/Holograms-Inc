<legend>Listing sales</legend>

<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Markdown</th>
    <th>Start</th>
    <th>End</th>
	<th colspan="3">FAQ Management</th>
  </tr>

<% @sales.each do |sale| %>
  <tr>
    <td><%= sale.name %></td>
    <td><%= sale.markdown %></td>
    <td><%= sale.start %></td>
    <td><%= sale.end %></td>
    <td><%= link_to 'Show', sale %></td>
    <% if @current_user&&@current_user.user_type.help_edit %>
		<td><%= link_to 'Edit', edit_sale_path(sale) %></td>
    	<td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

