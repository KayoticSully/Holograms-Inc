<legend>
  Listing users
  <span class="titleButton">
    <%= link_to 'Create New User', new_user_path, :class => "btn btn-success" %>
  </span>
</legend>

<table class="table table-striped table-bordered">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email address</th>
    <th>Credit card</th>
    <th>Phone number</th>
    <th>User type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email_address %></td>
    <td><%= user.credit_card %></td>
    <td><%= user.phone_number %></td>
    <td><%= user.user_type_id %></td>
    <td><%= link_to 'Show', user, :class => "btn btn-small btn-info" %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-small btn-warning" %></td>
    <td><%= link_to 'Delete', user, :method => :delete, data: { confirm: 'Are you sure?' }, 
        :class => "btn btn-small btn-danger" %></td>
<% end %>
</table>