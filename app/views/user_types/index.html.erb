<legend>
  Listing User Types
  <span class="titleButton">
    <%= link_to 'New User type', new_user_type_path, :class => "btn btn-small btn-success" %>
  </span>
</legend>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
	<th>Products</th>
    <th colspan=3>Management</th>
  </tr>

<% @user_types.each do |user_type| %>
  <tr>
	<td><%= user_type.name %></td>
    <td><%= user_type.products %></td>
    <td><%= link_to 'Show', user_type, :class => "btn btn-info" %></td>
    <td><%= link_to 'Edit', edit_user_type_path(user_type), :class => "btn btn-warning" %></td>
    <td><%= link_to 'Destroy', user_type, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>