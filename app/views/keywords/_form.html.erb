<%= form_for(@keyword) do |f| %>
  <legend>
    <%= formType %> Keyword
    <span class="titleButton">
      <%= f.submit :class => 'btn btn-success'%>
    </span>
    <% if formType == "Edit" %>
      <span class="titleButton">
        <%= link_to 'Show', @keyword, :class=>"btn btn-info" %>
      </span>
    <% end %>
    <span class="titleButton">
      <%= link_to 'Back', keywords_path, :class=>"btn" %>
    </span>
  </legend>
  <% if @keyword.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% @keyword.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
