<% count=0 %>

<% @keyword.products.each do |product| %>

	<%= raw "<div class=\"row-fluid\">" if (count%4==0) %>

		<div class="span3">
			<div class="thumbnail">
				<%= link_to image_tag("/assets/#{product.image}", :class => ""), product %>
				<div class="caption">
					<h5><%= link_to product.name, product %></h5>
					<p>
					Rating: <%= ("<i class=icon-thumbs-up></i>" * product.rating).html_safe %>
					<br/>
					<strong>$<%= number_with_precision(product.price, :precision => 2) %></strong>
					<br/>
					<%= link_to "Details", product, :class => "btn" %>
					<%= link_to "Add to Cart", "/orders/add/#{product.id}", :class => "btn btn-warning" %>
					</p>
				</div>
				<br/>
				

			</div>
		</div>
		
	<%= raw "</div>" if (count%4==3) %>
	
	<% count+=1 %>
	
<% end %>