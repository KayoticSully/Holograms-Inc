<%= form_tag sessions_path do %>
  <legend> Log In</legend>
  <p>
    <%= label_tag :email_address, 'Email Address' %>
	<%= text_field_tag :email_address, params[:email_address] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p class="button"><input class="btn" name="commit" type="submit" value="Sign In" />&nbsp;&nbsp;&nbsp;<%= link_to "or sign up for an accout", "/sign_up" %></p>
<% end %>
